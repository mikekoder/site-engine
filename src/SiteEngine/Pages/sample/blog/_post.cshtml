@model Page
@{
    Layout = "~/Pages/Shared/_PagesLayout.cshtml";
    var blog = Model.Parent as Blog;


}
<div class="row">
    <div class="col s12 m8">
        <h2>@Model.Title</h2>
        @RenderBody()
    </div>
    <div class="col s12 m4">
        @await Html.PartialAsync("_blog-categories.cshtml", blog)
        @await Html.PartialAsync("_blog-tags.cshtml", blog)
        @await Html.PartialAsync("_blog-archives.cshtml", blog)
    </div>
</div>